<div class="container card-product col-md-6 pt-md-5 mt-5 mb-5">
  <h1 class="pb-5">Create your QR Code</h1>

  <form action="/websites/qr" class="pb-5">
    <input type="text" name="url" placeholder="Type an url">
    <input class="btn btn-flat" type="submit" value="Submit">
  </form>

  <% if @website.save %>
    <div class="pb-4 mb-4">
      <%= @svg.html_safe %>
    </div>
  <% else %>
    <div class="qr-no-link mb-5">
      <h2>example https://www.google.com</h2>
    </div>
  <% end %>
</div>
